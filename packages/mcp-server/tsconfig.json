{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"rootDir": "./src",
		"outDir": "./dist",
		"strict": true,
		"skipLibCheck": true,
		"noEmitOnError": true,
		"sourceMap": true,
		"declaration": false,
		"resolveJsonModule": true
	},
	"include": ["src/**/*.ts"]
}

