{
	"name": "jlceda-schematic-helper",
	"version": "0.0.6",
	"description": "MCP server that drives JLCEDA Pro local client via an extension bridge (schematic helper)",
	"type": "module",
	"files": [
		"dist"
	],
	"bin": {
		"jlceda-schematic-helper": "dist/cli.js"
	},
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"dev": "npm run build && node --enable-source-maps dist/cli.js --port 9050",
		"prepublishOnly": "node ../../scripts/sync-versions.mjs && node ../../scripts/check-versions.mjs",
		"typecheck": "tsc -p tsconfig.json --noEmit"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.25.1",
		"ws": "^8.18.3",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@types/node": "^25.0.3",
		"@types/ws": "^8.5.14",
		"typescript": "^5.9.3"
	},
	"engines": {
		"node": ">=20.5.0"
	}
}

